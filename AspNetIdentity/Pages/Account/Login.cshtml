@page
@model AspNetIdentity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="container border p-5 mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Credential.Email"></label>
            </div>
            <div class="col-3">
                <input asp-for="Credential.Email" class="form-control" />
            </div>
            <span asp-validation-for="Credential.Email" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-3">
                <input asp-for="Credential.Password" class="form-control" />
            </div>
            <span asp-validation-for="Credential.Password" class="text-danger"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" class="form-check-input" asp-for="Credential.RememberMe" />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <input type="submit" class="btn btn-primary form-control" value="Login" />
            </div>
            <div class="col-2">
                <a asp-page="Register" class="btn btn-primary form-control" />Register</a>
            </div>
        </div>
    </form>
</div>