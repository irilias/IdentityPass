@page
@model AspNetIdentity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<div class="container border p-5 mt-3">
    @if (Model.RegisterViewModel.Message != null)
    {
        <p class="text-info">
            @Model.RegisterViewModel.Message
        </p>
    }
    else
    {

    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="@Model.RegisterViewModel.Email"></label>
            </div>
            <div class="col-3">
                <input asp-for="@Model.RegisterViewModel.Email" class="form-control" />
            </div>
            <span asp-validation-for="@Model.RegisterViewModel.Email" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="@Model.RegisterViewModel.Password"></label>
            </div>
            <div class="col-3">
                <input asp-for="@Model.RegisterViewModel.Password" class="form-control" />
            </div>
            <span asp-validation-for="@Model.RegisterViewModel.Password" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <input type="submit" class="btn btn-primary form-control" value="Register" />
            </div>
        </div>
    </form>
    }
</div>

@section scripts {
<partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml"/>
}